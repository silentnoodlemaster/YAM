{
    "compilerOptions": {
        "target": "es5",
        //"module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true ,
        "outDir": "ts"
  },
  "exclude": [ "node_modules" ] ,
  "files": ["./app/**/*"]
}